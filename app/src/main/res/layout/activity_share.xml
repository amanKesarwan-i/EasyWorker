<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Service">





    <ScrollView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       >


        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFFFF">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:src="@drawable/referralcrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Earn Rs. 750 for every Friend You Refer "
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:text="Get a friends to start using EasyWorker toady and earn Rs. 750 when they complete their first order"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"
                        android:text="Win Miles Membership"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/round_text_box"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:baselineAligned="false"
                            android:src="@drawable/member" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="24dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="------"
                                android:textSize="24sp"
                                android:textColor="#000000"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rank"
                                android:textSize="18sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textColor="#000000"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Points"
                                android:textSize="18sp"/>

                        </LinearLayout>

                    </LinearLayout>






                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:text="SHARE YOUR REFERRAL CODE"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/refer_round_shape">

                        <TextView
                            android:id="@+id/sharecode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AMANCODE"
                            android:textSize="24dp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/next"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="130dp"
                            />

                    </LinearLayout>




                    <TextView
                        android:id="@+id/whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:padding="8dp"
                        android:background="@drawable/round_whatssap_share"
                        android:gravity="center"
                        android:text="Share via WhatsApp"
                        android:textColor="#ffffff"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:textSize="28sp" />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/avail_referral_discount"
                        android:textSize="18sp"
                        android:textColor="#000000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:hint="@string/friend_referral_code"
                            android:inputType="text"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textSize="25sp" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Apply"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:background="@drawable/change_phone_no"/>

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/frequently_asked_questions"
                        android:textColor="#000000"
                        android:textSize="28sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_margin="8dp"
                        android:text="@string/q1_what_is_a_easy_worker_referal_program"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/a_easyworker_referr_program"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_margin="8dp"
                        android:text="@string/q2_how_do_i_invite_colleagues_to_join_easyworker"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/easywork_is_a_company"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_margin="8dp"
                        android:text="@string/q3_how_does_the_rewerd_feature_work"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="80dp"
                        android:text="@string/rewerd_feature_on_easyworker"
                        android:textSize="20sp" />






                </LinearLayout>

            </LinearLayout>


        </FrameLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:id="@+id/home"
            android:src="@drawable/home"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:id="@+id/help"
            android:src="@drawable/help"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:id="@+id/sevice"
            android:src="@drawable/service"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:id="@+id/share"
            android:src="@drawable/share"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:id="@+id/account"
            android:src="@drawable/account"/>


    </LinearLayout>

</RelativeLayout>