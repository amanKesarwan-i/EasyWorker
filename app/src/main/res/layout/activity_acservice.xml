                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="0.5"
                    android:text="Deep clean AC service (window)"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plumber1"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textSize="22sp"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style"
                    android:layout_marginRight="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/plumberPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="499"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="18dp"/>
                <TextView
                    android:id="@+id/plumberTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="45 min"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="18dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get 2x deeper dust removal with unique foam jet technique"
                    android:textSize="17sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="14dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:text="Recommended for ACs serviced more than 6 months"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View details"
                    android:layout_marginLeft="10dp"
                    android:textSize="22sp"
                    android:layout_marginTop="12dp"
                    android:textColor="#334ff4"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
